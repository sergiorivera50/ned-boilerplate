{
  "name": "ned-boilerplate",
  "version": "0.0.1",
  "description": "The definitive boilerplate for creating dockerized REST APIs with Express and Node.js",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc -p .",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "dev": "NODE_ENV=development ./node_modules/.bin/ts-node-dev --watch=src/**/*.ts src/index.ts",
    "test": "NODE_ENV=testing ./node_modules/.bin/jest --config=src/configs/jest.config.ts --colors --verbose --detectOpenHandles",
    "docker:dev": "docker-compose -f docker-compose.yaml -f docker-compose.dev.yaml up",
    "docker:test": "docker-compose -f docker-compose.yaml -f docker-compose.test.yaml up --abort-on-container-exit",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix --ext .js,.jsx \"**/*.{ts,tsx}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergiorivera50/ned-boilerplate.git"
  },
  "keywords": [
    "Nodejs",
    "Express",
    "Docker",
    "REST",
    "API"
  ],
  "author": "Sergio Rivera",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sergiorivera50/ned-boilerplate/issues"
  },
  "homepage": "https://github.com/sergiorivera50/ned-boilerplate#readme",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.32",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "express": "^4.18.1",
    "express-jwt": "^7.7.1",
    "jwks-rsa": "^2.1.2"
  }
}
